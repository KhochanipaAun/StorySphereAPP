<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:background="@color/white"
        android:layout_height="192dp"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"

            app:contentScrim="?attr/colorPrimary">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                app:navigationIcon="@drawable/round_arrow_back_ios_24"
                android:paddingTop="50dp">

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Writing"
                android:textStyle="bold"
                android:textSize="27sp"
                android:letterSpacing="0.01"
                android:textColor="@color/darkpurple"
                android:layout_marginTop="64dp"
                android:layout_marginLeft="65dp"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".Writing_Edit_Writing">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="425dp"
                android:layout_height="798dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/bttEdit"
                    android:layout_width="215dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="580dp"
                    android:backgroundTint="@color/purple1"
                    android:text="@string/edit"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="420dp"
                    android:layout_height="2dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/divider_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/space3" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="420dp"
                    android:layout_height="2dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/divider_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/space3" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="170dp"
                    android:layout_height="167dp"
                    android:src="@drawable/ic_human_foreground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="172dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="132dp"
                    android:text="Uplode image"
                    android:textAlignment="center"
                    android:textColor="@color/purple1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Space
                    android:id="@+id/space2"
                    android:layout_width="19dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="193dp"
                    android:layout_marginEnd="232dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <View
                    android:id="@+id/view"
                    android:layout_width="420dp"
                    android:layout_height="4dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/divider_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/space2" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="98dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="36dp"
                    android:text="Edit Title"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.195"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <EditText
                    android:id="@+id/edtEditTitle"
                    android:layout_width="349dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="236dp"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="Edit your title"
                    android:inputType="text"
                    android:paddingLeft="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.789"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Space
                    android:id="@+id/space3"
                    android:layout_width="22dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="162dp"
                    android:layout_marginEnd="241dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtEditTitle" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="98dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="32dp"
                    android:text="Edit Tagline"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.235"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5" />

                <EditText
                    android:id="@+id/edtEditTagline"
                    android:layout_width="349dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="376dp"
                    android:backgroundTint="#FFFFFF"
                    android:ems="10"
                    android:hint="Edit your title"
                    android:inputType="text"
                    android:paddingLeft="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.789"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Space
                    android:id="@+id/space4"
                    android:layout_width="22dp"
                    android:layout_height="9dp"
                    android:layout_marginStart="162dp"
                    android:layout_marginEnd="241dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtEditTagline" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="420dp"
                    android:layout_height="2dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/divider_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/space4" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>